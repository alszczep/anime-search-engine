{
  "name": "anime-list-back-end",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "engines": {
    "node": "14.15.0",
    "npm": "6.14.8"
  },
  "scripts": {
    "devServer": "nodemon src/app.ts",
    "devClient": "cd front-end && npm start",
    "installAll": "npm install && cd front-end && npm install",
    "start": "node dist/app.js",
    "build": "tsc -p .",
    "heroku-prebuild": "cd front-end && npm install && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "jest --verbose",
    "testAll": "echo BACK-END && npm test && echo FRONT-END && cd front-end && npm test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "pg": "^8.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node-fetch": "^2.5.10",
    "@types/pg": "^7.14.11",
    "@types/uuid": "^8.3.0",
    "jest": "^26.6.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)",
      "front-end/node_modules/(?!variables/.*)"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "front-end"
    ]
  }
}
